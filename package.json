{
  "name": "node-starter-kit",
  "version": "1.0.0",
  "description": "A Node.js project with Express, TypeScript, Prisma,Mysql ESLint, and Jest",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "postbuild": "npm run copy-swagger && npm run copy-locale",
    "copy-swagger": "copyfiles -u 1 src/config/swagger.json dist/",
    "copy-locale": "copyfiles -u 1 src/config/locales/* dist/",
    "lint:check": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format:check": "prettier --check 'src/**/*.{js,ts,json,md}'",
    "format:fix": "prettier --write 'src/**/*.{js,ts,json,md}'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPatterns='src/tests/unit/' --coverage",
    "test:unit:module": "jest --testPathPatterns='src/tests/unit/.*' --testNamePattern",
    "test:integration": "jest --testPathPatterns='src/tests/integration/' --runInBand",
    "test:integration:module": "jest --testPathPatterns='src/tests/integration/.*' --testNamePattern",
    "test:module": "jest --testPathPatterns",
    "test:all": "npm run test:unit && npm run test:integration",
    "analyze-benchmark": "node scripts/analyzeBenchmark.js",
    "seed": "ts-node prisma/seed.ts",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prepare": "husky",
    "generate": "ts-node generate-files.ts"
  },
  "dependencies": {
    "@prisma/adapter-mariadb": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "archiver": "^7.0.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "fs-extra": "^11.3.3",
    "i18n": "^0.15.3",
    "inversify": "^7.11.0",
    "inversify-express-utils": "^6.5.0",
    "jsonwebtoken": "^9.0.3",
    "mariadb": "^3.4.5",
    "minimist": "^1.2.8",
    "multer": "^2.0.2",
    "mysql2": "^3.16.0",
    "nodemon": "^3.1.11",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/archiver": "^7.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/i18n": "^0.13.12",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^25.0.9",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "inquirer": "^13.2.0",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "prisma": "^7.2.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  },
  "overrides": {
    "inversify-express-utils": {
      "express": "^5.2.1",
      "inversify": "^7.11.0"
    },
    "diff": "^8.0.3",
    "tar": "^7.5.4",
    "hono": "^4.11.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ],
    "src/**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
