# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

NODE_ENV="development"
APP_DEBUG=true
ERROR_LOG=true
LOGGER_LEVEL="low"
DATABASE_URL="mariadb://root:root@localhost:3306/StarterKit"
PORT=5000
ERROR_LOGS_PATH="logs"
JWT_SECRET="S3cr3t@1234!ABCD5678efgh!@#%^&*"
PUBLIC_ASSET_PATH="public"
ENABLE_PERFORMANCE_TRACKING=false

# Test Configuration
TEST_ADMIN_USERNAME="admin@test.com"
TEST_ADMIN_PASSWORD="123456"
CLEAN_TEST_DATA=true  # Set to false to keep test data in DB for debugging

# Email Configuration
# EMAIL_DRIVER: 'smtp' (send real emails) or 'log' (write to logs/emails/ for testing)
EMAIL_DRIVER="log"

# SMTP Configuration (only used when EMAIL_DRIVER=smtp)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM_NAME="StarterKit"
SMTP_FROM_EMAIL="noreply@example.com"
FRONTEND_URL="http://localhost:3000"